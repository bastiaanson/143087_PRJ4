---
import BaseHead from "../components/BaseHead.astro";
// import Footer from "../components/Footer/index.astro";
import Footer from "../components/Footer/index.astro";
import Navigation from "../components/Navigation/index.astro";

export interface Props {
    title: string;
    description: string;
    image?: string;
    script?: [
        {
            type: string;
            value: any;
        }
    ];
}

const { title, description, image = "/social.png", script } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead
            title={title}
            description={description}
            image={image}
            script={script}
        />
    </head>
    <body>
        <Navigation />
        <main id="main">
            <slot />
        </main>
        <Footer />
    </body>
</html>
